<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVaccineType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COVID-19 Vaccine - Mũi 1"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang chờ"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/status_pending_background"
                android:padding="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </LinearLayout>

        <!-- Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/03/2024"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giờ"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Location -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bệnh viện Chợ Rẫy"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnView"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Xem"
                android:textSize="12sp"
                android:textColor="@color/primary_color"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginEnd="4dp"
                android:minWidth="60dp" />

            <Button
                android:id="@+id/btnReschedule"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Đặt lại"
                android:textSize="12sp"
                android:textColor="@color/accent_color"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginEnd="4dp"
                android:minWidth="60dp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Hủy"
                android:textSize="12sp"
                android:textColor="@color/light_red"
                android:backgroundTint="@android:color/transparent"
                android:minWidth="60dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>